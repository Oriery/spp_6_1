<li class="list-group-item"  @click="remove(server.id)">
    <%= debt.name %> -
    <strong><%= debt.amount + ' ' + debt.currency_code %></strong> -
    <%= debt.status %>
    <small class="text-muted"> <%= new Date(debt.createdAt).toLocaleString() %> </small>

    <% let options = ['paid', 'pending', 'cancelled'] %>
     
    <div class="btn-group">
        <% options.forEach(option => { %>
            <% if (option !== debt.status) { %>
                <form method="post">
                    <input type="hidden" name="status" value="<%= option %>" />
                    <input type="hidden" name="id" value="<%= debt.id %>" />
                    <button type="submit" class="btn btn-primary" style="margin: 0.125rem; padding: 0.25rem;"><%= option %></button>
                </form>
            <% } %>
        <% }) %>
    </div>
</li>
